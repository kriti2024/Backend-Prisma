generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserDetail {
  id        Int       @id @default(autoincrement())
  username  String
  address   String?
  contact   String?
  email     String    @unique
  dob       DateTime?
  password  String
  role      Role
  gender    Gender
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]
}

model Product {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  price       Float
  image       String?
  user        UserDetail @relation(fields: [userId], references: [id])
  userId      Int
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum Role {
  admin
  customer
  product_owner
}

enum Gender {
  male
  female
}
